              		<li><%= link_to @campos[key]+" ("+value.to_s+")" , locations_path(:filtro => key) %></li>
              		<%end%>
             	<%end%>
             	 <li class="divider"></li>  
             	 <li class="nav-header">Precio</li>  
             	 	
             	 	<% @precios.each do |key, value| %>
             	 		
             	 		<% if key == "1"%>
