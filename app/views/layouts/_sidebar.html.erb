
  
  <% if @facets %>
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Filtros</li>
              
              <% if @filtros.count >0 %>


				      <% @filtros.each do |key, value| %>
						      <% if ["1","2","3","4","5"].include?(key)%>
							     <a href="<%= url_for locations_path(:rmv => key)  %>" class="btn btn-inverse btn-small">
                    <i class="icon-remove-sign "></i> <%= value %>
                     </a>



