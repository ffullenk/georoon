              			<%end%>
              			
              			<% if key == "2"%>
              				<li><%= link_to "$50.000 a $100.000  ("+value.to_s+")", locations_path(:precio => key) %></li>
              			<%end%>
              			
              			<% if key == "3"%>
              				<li><%= link_to "$100.000 a $150.000 ("+value.to_s+")", locations_path(:precio => key) %></li>
              			<%end%>
              			
              			<% if key == "4"%>
